<% include ../partials/header.ejs %>

<!-- Content for the Edit Page -->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %> </h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <lable for="titleTextField">Book title</lable>
                    <input type="text" class="form-control" 
                    id="titleTextField" 
                    placeholder="Enter the book title" 
                    value="<%= bookToUpdate.Title  %> "
                    name="title" required>  
                </div>
                <div class="form-group">
                    <lable for="descTextField">Book description</lable>
                    <textarea class="form-control" id="descTextField" rows="5" placeholder="Enter the book's description"
                    name="description"
                    required><%= bookToUpdate.Description %></textarea>
                </div>
                <div class="form-group">
                    <lable for="priceTextField">Book price</lable>
                    <input type="text" class="form-control" 
                    id="priceTextField" 
                    placeholder="Enter the book's price" 
                    value="<%= bookToUpdate.Price %>"
                    name="price" required>
                </div>
                <div class="form-group">
                    <lable for="authorTextField">Book author</lable>
                    <input type="text" class="form-control" 
                    id="authorTextField" 
                    placeholder="Enter the book's author" 
                    value="<%= bookToUpdate.Author %>" 
                    name="author" required>
                </div>
                <div class="form-group">
                    <lable for="genreTextField">Book genre</lable>
                    <input type="text" class="form-control" 
                    id="genreTextField" 
                    placeholder="Enter the book's genre"
                    value="<%= bookToUpdate.Genre %>"
                    name="genre" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>